/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx; /* 较大的标题字体 */
  font-weight: bold;
  margin-bottom: 80rpx;
  color: #333;
}

.upload-btn {
  width: 80%;
  height: 120rpx; /* 较大的按钮高度 */
  line-height: 120rpx;
  font-size: 36rpx; /* 较大的按钮字体 */
  margin-bottom: 60rpx;
}

.result-container, .error-container {
  width: 100%;
  margin-top: 40rpx;
  padding: 30rpx;
  border: 1px solid #eee;
  border-radius: 10rpx;
  background-color: #f9f9f9;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #07c160;
}

.result-text {
  font-size: 32rpx;
  color: #555;
  word-break: break-all;
}

.error-text {
  font-size: 32rpx;
  color: #e64340; /* 醒目的红色错误提示 */
}