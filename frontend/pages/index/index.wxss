.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  background-color: #f7f8fa;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
}

.main-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  margin-top: 10vh;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #1f2329;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #8a8f99;
  margin-bottom: 80rpx;
}

.button-group {
  width: 100%;
}

.main-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: #ffffff;
  background: linear-gradient(90deg, #3d7eff, #4a8aff);
  border-radius: 55rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(61, 126, 255, 0.2);
}

.button-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.secondary-button {
  width: 100%;
  font-size: 32rpx;
  color: #3d7eff;
  background-color: transparent;
  border: none;
}

.secondary-button::after {
  border: none;
}

.footer {
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #c8c9cc;
}