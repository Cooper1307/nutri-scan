.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  transition: background-color 0.5s;
}

.result-green { background-color: #e8f8f5; }
.result-yellow { background-color: #fffbeb; }
.result-red { background-color: #fff0f0; }

.main-result-card {
  width: 100%;
  padding: 60rpx 40rpx;
  background-color: #fff;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.assessment-icon-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.result-green .assessment-icon-wrapper { background-color: #d4f2e9; }
.result-yellow .assessment-icon-wrapper { background-color: #fff1c2; }
.result-red .assessment-icon-wrapper { background-color: #ffe0e0; }

.assessment-icon {
  width: 90rpx;
  height: 90rpx;
}

.assessment-title {
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.result-green .assessment-title { color: #07c160; }
.result-yellow .assessment-title { color: #f5a623; }
.result-red .assessment-title { color: #e64340; }

.assessment-suggestion {
  font-size: 32rpx;
  color: #555;
  text-align: center;
}

.details-card {
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 60rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.divider {
  width: 100%;
  height: 1px;
  background-color: #f0f0f0;
  margin-bottom: 30rpx;
}

.nutrient-list {
  width: 100%;
}

.nutrient-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.nutrient-item:last-child {
  margin-bottom: 0;
}

.nutrient-info {
  display: flex;
  flex-direction: column;
}

.nutrient-name {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.nutrient-value {
  font-size: 30rpx;
  color: #888;
}

.nutrient-assessment {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.nutrient-assessment-green { background-color: #07c160; }
.nutrient-assessment-yellow { background-color: #f5a623; }
.nutrient-assessment-red { background-color: #e64340; }

.back-button {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  background-color: #3d7eff;
  border-radius: 50rpx;
}